{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "google",
        "eslint:recommended"
    ],
    "globals": {},
    "parserOptions": {
        "ecmaVersion": 2022
    },
    "rules": {
        "indent": ["error", 2],  
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"], 
        "semi": ["error", "always"],
        "array-bracket-spacing": ["error", "always"],
        "object-curly-spacing": ["error", "always"],
        "space-in-parens": ["error", "always"]
    }
}